<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/assets/css/style.css" />
    <title>Document</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/"><img
            src="../public/assets/images/brandred.png"
            alt=""
            width="40"
            height="34"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active text_orange"
                aria-current="page"
                href="/blog"
              >Blogs</a>
            </li>
          </ul>
          {{#if isLogin}}
            <ul class="navbar-nav ms-auto mb-lg-0">
              <li class="nav-item">
                <span class="nav-link">Hello, {{user.name}}</span>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="/logout"
                >Logout</a>
              </li>
            </ul>
          {{else}}
            <ul class="navbar-nav ms-auto mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="/login"
                >Login</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="/register"
                >Register</a>
              </li>
            </ul>
          {{/if}}
          <form class="d-flex">
            <a
              href="/contact"
              class="btn text-white btn_orange px-3 mt-3"
              type="submit"
            >
              Contact Me
            </a>
          </form>
        </div>
      </div>
    </nav>

    <div class="contact_section">
      <div class="container">
        <div class="contact shadow-lg p-5 bg-body rounded mx-auto">
          <div class="col-lg">
            <div class="card">
              <div class="row g-0">
                <div class="col-md-5">
                  <img
                    src="../public/assets/images/bg-geo.jpg"
                    class="img-fluid rounded-start"
                    alt="..."
                  />
                </div>
                <div class="col-md-7 p-3">
                  <div class="card-body">
                    <h3 class="card-title text-center">Contact Form</h3>
                    <form>
                      <div class="mb-3">
                        <label for="input_nama" class="form-label">Name</label>
                        <input
                          type="text"
                          class="form-control"
                          id="input_nama"
                          name="input_nama"
                          placeholder="Your Name"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <label
                          for="input_email"
                          class="form-label"
                        >Email</label>
                        <input
                          type="text"
                          class="form-control"
                          id="input_email"
                          name="input_email"
                          placeholder="Your Email"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <label for="input_number" class="form-label">Your Number</label>
                        <input
                          type="number"
                          class="form-control"
                          id="input_number"
                          name="input_number"
                          placeholder="Your Number"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <label
                          for="input_subject"
                          class="form-label mb-2"
                        >Subject</label>
                        <select
                          class="form-select"
                          name="input_subject"
                          id="input_subject"
                        >
                          <option value="Im Hiring">I'm Hiring</option>
                          <option value="Privacy Policy">Privacy Policy</option>
                          <option value="Problem with our site">Problem with our
                            site</option>
                        </select>
                      </div>

                      <div class="mb-3">
                        <label for="input_area" class="form-label">Your Message</label>
                        <textarea
                          type="text"
                          class="form-control"
                          id="input_area"
                          name="input_area"
                          required
                        >
                        </textarea>

                      </div>

                      <div class="mb-3">
                        <p class="text-center">Choose Your Skill</p>
                        <div class="d-flex justify-content-center gap-3">
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              value="HTML"
                              id="html"
                            />
                            <label class="form-check-label" for="html">
                              HTML
                            </label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              value="CSS"
                              id="css"
                            />
                            <label class="form-check-label" for="css">
                              CSS
                            </label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              value="Javascript"
                              id="javaScript"
                            />
                            <label class="form-check-label" for="javaScript">
                              Javascript
                            </label>
                          </div>
                        </div>
                      </div>
                      <div
                        class="mb-3 d-flex justify-content-center align-items-center"
                      >
                        <button
                          class="btn btn_orange"
                          type="button"
                          onclick="submitData()"
                        >
                          <div
                            class="d-flex justify-content-start gap-2 align-items-center text-white"
                          >
                            <i class="bx bx-mail-send text-white"></i>Send to
                            Email
                          </div>
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="../public/assets/js/style.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>